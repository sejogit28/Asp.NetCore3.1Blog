@using Microsoft.AspNetCore.Identity
@model MySqlServerConnect.Models.BlogAppUser
@inject SignInManager<BlogAppUser> SignInManager
@inject UserManager<BlogAppUser> UserManager

@{
    ViewData["Title"] = "ViewUserProfile";
}



<div class="container border mt-4 px-4">
    <div class="row">
        <div class="col-6">
            <form>
                <div class="m-2  p-2">
                    <h2 class="text-info">
                        Profile Info
                    </h2>
                </div>




                <div class="form-group row">
                    <div class="col-4">
                        <label>@Html.DisplayNameFor(model => model.UserName)</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.UserName)" disabled />
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-4">
                        <label>@Html.DisplayNameFor(model => model.GovName)</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.GovName)" disabled />
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-4">
                        <label>@Html.DisplayNameFor(model => model.Email)</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.Email)" disabled />
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-4">
                        <label>@Html.DisplayNameFor(model => model.DateJoined)</label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" placeholder="@Html.DisplayFor(model => model.DateJoined)" disabled />
                    </div>
                </div>

                <div class="col-12 mb-4">
                    <div class="row justify-content-center">
                        <div class="col-6">
                            <a asp-controller="Author" asp-action="AuthorCreate" class="btn btn-lg btn-primary w-100">Become An Author<i class="fas fa-pen-alt"></i></a>
                        </div>
                       
                    </div>
                </div>

                <div class="col-12 mb-4">
                    <div class="row align-self-center">
                        <div class="col-6">
                            <a asp-controller="Administrative" asp-action="EditUserInfo" class="btn btn-lg btn-info w-100">Edit Your Info<i class="fas fa-user-edit"></i></a>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-warning w-100"><i class="fas fa-backward"></i>Go Back</a>

                        </div>
                    </div>
                </div>

            </form>
        </div>
        </div>

    </div>