@model MySqlServerConnect.Models.Posts
@{
    ViewData["Title"] = "BlogDelete";
}




<div class="container border mt-4 px-4">
    <div class="row">
        <form method="post" asp-action="BlogDeleted">
            <div class="m-2  p-2 col-8">
                <h2 class="text-info">
                    Delete This Blog Post?
                </h2>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <!--Hidden Id input so that 0 isn't returned and Entity can find the row for this post in the database-->
                <div class="col-8">
                    <div class="col-8">
                        <input asp-for="PostId" class="form-control" hidden />
                    </div>
                </div>


                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="AuthorName"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="AuthorName" disabled class="form-control" placeholder="First and Last Name" />
                            <span asp-validation-for="AuthorName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="BlogAppUserId"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="BlogAppUserId" disabled class="form-control" placeholder="Title of your article" />
                            <span asp-validation-for="BlogAppUserId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Title"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Title" disabled class="form-control" placeholder="Title of your article" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Summary"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Summary" disabled class="form-control" placeholder="About two sentences describing your article" />
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="DatePosted"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="DatePosted" disabled class="form-control" placeholder="yyyy-mm-dd" />
                            <span asp-validation-for="DatePosted" class="text-danger"></span>
                        </div>
                    </div>
                </div>



                <div class="col-12 ">
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Text"></label> <!--Should be bigger...Was done with the text area tag below-->
                        </div>
                        <div class="col-10">
                            <textarea disabled class="form-control" asp-for="Text" rows="10" placeholder="Write Away!!!"></textarea>
                            <span asp-validation-for="Text" disabled class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="ReadTime"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ReadTime" disabled class="form-control" placeholder="Just the estimated number of minutes ie: '5'" />
                            <span asp-validation-for="ReadTime" disabled class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="col-10 mb-4">
                    <div class="row align-self-center">
                        <div class="col-3">
                            <input type="submit" value="Delete" class="btn btn-lg btn-danger w-100" />
                        </div>
                        <div class="col-6">
                            <a asp-controller="BlogCRUD" asp-action="ViewAllPosts" class="btn btn-lg btn-primary w-100">Go Back</a>
                        </div>
                    </div>
                </div>


            </div>




        </form>
    </div>

</div>


