@model BlogCreateViewModel
@{
    ViewData["Title"] = "BlogCreate";
}




<div class="container border mt-4 px-4">
    <div class="row">
        <form method="post" asp-action="BlogCreate">
            <div class="m-2  p-2 col-2">
                <h2 class="text-info">
                    Write Something
                </h2>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row">
               
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Title"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Title" class="form-control" placeholder="Title of your article" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Summary"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Summary" class="form-control" placeholder="About two sentences describing your article" />
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>
                    </div>
                </div>




                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="ImageURL"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ImageURL" class="form-control" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-12 ">
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Text"></label> <!--Should be bigger...Was done with the text area tag below-->
                        </div>
                        <div class="col-10">
                            <textarea class="form-control" asp-for="Text" rows="10" placeholder="Write Away!!!"></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="ReadTime"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ReadTime" class="form-control" placeholder="Just the estimated number of minutes ie: '5'" />
                            <span asp-validation-for="ReadTime" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="col-6 mb-4">
                    <div class="row align-self-center">
                        <div class="col-6">
                            <input type="submit" value="Submit" class="btn btn-lg btn-primary w-100" />
                        </div>
                        <div class="col-6">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-danger w-100">Go Back</a>
                        </div>
                    </div>
                </div>


            </div>




        </form>
    </div>

</div>

<script src="https://cdn.tiny.cloud/1/v0gnfgy31khcf490w96t286qulg3vpwv9tqxsc46n5ugrb1m/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>tinymce.init({ selector: 'textarea' });</script>


