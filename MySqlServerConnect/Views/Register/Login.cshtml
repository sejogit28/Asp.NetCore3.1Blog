@model LoginViewModel
@{
    ViewData["Title"] = "Log-In Page ";
}

<div class="container">
    <div class="row">
        <h1 class="text-info">Welcome!!</h1> <!--Every row needs a column marker(col-6, col-4 etc, under it-->

        <div class="container border mt-4 px-4">
            <div class="row">
                <form method="post" asp-action="Login"> <!--Putting the wrong action here causes a crash. Be attentive-->
                <div asp-validation-summary="All" class="text-danger"></div>
                    


                    <div class="row">
                        <div class="col-11">
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="LoginName"></label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="LoginName" class="form-control" placeholder="The name you choose to be refererd to on this site" />
                                    <span asp-validation-for="LoginName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <div class="col-11">
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="Password"></label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <div class="col-10">
                            <div class="form-group row">
                                <div class="col-6">
                                    <div class="form-checkbox">
                                        <label asp-for="RememberMe">
                                            <input asp-for="RememberMe" />
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-6 mb-4">
                            <div class="row align-self-center">
                                <div class="col-6">
                                    <input type="submit" value="Submit" class="btn btn-lg btn-primary w-100" />
                                </div>
                                <div class="col-6">
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-danger w-100">Go Back</a>
                                </div>
                            </div>
                        </div>


                    </div>
                </form>
             </div>

        </div>
    </div>
</div>